<% */ %>
{
  "resourceType": "Condition",
  "id": "<%- id %>" <% if ((typeof dateOfDiagnosis !== 'undefined' && dateOfDiagnosis) || (typeof histology !== 'undefined' && histology)) { %>,
  "extension": [
  <% if (typeof dateOfDiagnosis !== 'undefined' && dateOfDiagnosis) { %>  {
      "url": "<%- dateOfDiagnosis.url %>",
      "valueDateTime": "<%- dateOfDiagnosis.value %>"
    } <% } %> <% if (typeof histology !== 'undefined' && histology) { %>, 
    {
      "url": "<%- histology.url %>",
      "valueCodeableConcept": {
        "coding": [
          {
            "system": "<%- histology.system %>",
            "code": "<%- histology.code %>"
          }
        ]
      }
    }
  ]<% }} %><% if(typeof clinicalStatus !== 'undefined' && clinicalStatus) { %>,
  "clinicalStatus": {
    "coding": [
      {
        "system": "<%- clinicalStatus.system %>",
        "code": "<%- clinicalStatus.code %>"
      }
    ]
  } <% } %> <% if(typeof verificationStatus !== 'undefined' && verificationStatus) { %>,
  "verificationStatus": {
    "coding": [
      {
        "system": "<%- verificationStatus.system %>",
        "code": "<%- verificationStatus.code %>"
      }
    ]
  } <% } %>, 
  "category": [
  <% category.forEach((categoryCode, i) => { %>
    {
      "coding": [ 
        {
          "system": "<%- categoryCode.system %>",
          "code": "<%- categoryCode.code %>"
        }
      ]
    } <% if (i + 1 < category.length) { %>, <% } %>
  ], <% })%> 
  "code": {
    "coding": [
      {
        "system": "<%- code.system %>",
        "code": "<%- code.code %>"<% if (typeof code.display !== 'undefined' && code.display) { %>,
        "display": "<%- code.display %>"
        <% } %>
      }
    ]
  }, 
  <% if(typeof bodySite !== 'undefined' && bodySite && bodySite.length > 0) { %>
  "bodySite": [
  <% bodySite.forEach((site, i) => { %>
    {
      <% if (typeof laterality !== 'undefined' && laterality) { %>
      "extension": [
        {
          "url": "<%- laterality.url %>",
          "valueCodeableConcept": {
            "coding": [
              {
                "system": "<%- laterality.system %>",
                "code": "<%- laterality.code %>"
              }
            ]
          }
        }
      ], <% } %>
      "coding": [
        {
          "system": "<%- site.system %>",
          "code": "<%- site.code %>"
        }
      ]
    } <%if (i + 1 < bodySite.length) { %>, <% } %> 
  ], <% })} %>
  "subject" : {
    "reference": "urn:uuid:<%- subject.id %>"<% if (typeof subject.name !== 'undefined' && subject.name) { %>,
    "display": "<%- subject.name %>"
    <% } %>
  }
}
